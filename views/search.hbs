<div id="panelSearch">

<div class="input-group mb-3" style="width:35%;margin-left:32.5%;margin-right:32.5%;">
    <input id="keyInput" type="text" class="form-control" placeholder="Enter a keyword" aria-label="Username" aria-describedby="basic-addon1" value={{searchedKeyword}}>
</div>

<label for="countries">Choose a country:</label>
<select class="form-control" name="countries" id="countries">
</select>

<label for="time">Choose an interval of time:</label>
<select class="form-control" name="time" id="time">
    <option value = "1 ora" >Ultima ora</option>
    <option value = "4 ore" >Ultimele 4 ore</option>
    <option value = "1 zi" >Ultima zi</option>
    <option value = "30 zile" >Ultimele 30 de zile</option>
    <option value = "90 zile" >Ultimele 90 de zile</option>
    <option value = "12 luni" >Ultimele 12 luni</option>    
    <option value = "5 ani" >Ultimii 5 ani</option>
</select>

</div>



<div id="panelData">
    
    <div id="trendingChart" class="chart-container">
        <canvas id="chart1" style="height: 300px; width: 50%;"></canvas>
    </div>

    <div id="interestOverTimeChart">
    </div>

</div>
<script>

    
    $(document).ready(()=>{
        var graphs = new GraphCollection();

        $.ajax({
        url: "/allCountries",
        type:"get",
        dataType: "json",
        success: function(data){
            data.forEach((item) => {
                    var obj = `<option value="${item}">${item}</option>`;
                    $('#countries').append(obj);});
        }
        });

        $("#countries").val("Romania");
        
        initiateData("Romania",$('#keyInput').val());

    });
</script>